% 中文支持和汉化
\PassOptionsToPackage{no-math}{fontspec}
\PassOptionsToPackage{CJKmath}{xeCJK} %公式中直接的中文
\RequirePackage[UTF8, zihao=false, scheme=chinese, heading=true]{ctex}

\setCJKmainfont{SimSun}[BoldFont=SimHei, ItalicFont=KaiTi] % 设置主字体
\setCJKsansfont{SimSun}[BoldFont=SimHei, ItalicFont=KaiTi] % 设置无衬线字体
\setCJKmonofont{SimSun}[BoldFont=SimHei, ItalicFont=KaiTi] % 设置等宽字体

% 其他字体
\let\kai\relax
\let\fang\relax
\newCJKfontfamily\kai{KaiTi}[AutoFakeBold, AutoFakeSlant] % [AutoFakeSlant=0.3, AutoFakeBold=3]
\newCJKfontfamily\fang{FangSong}[AutoFakeBold, AutoFakeSlant]

